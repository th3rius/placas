<AnchorPane fx:id="ap" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ifsc.tds.controller.CadastroDialogController">
   <children>
      <GridPane hgap="20.0" prefHeight="350.0" prefWidth="350.0" vgap="2.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
