        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Cadastrar" GridPane.halignment="CENTER">
               <font>
                  <Font size="48.0" />
               </font>
            </Label>
            <TextField fx:id="txtNome" promptText="Nome" GridPane.rowIndex="1" />
            <PasswordField fx:id="txtSenha" promptText="Senha" GridPane.rowIndex="2" />
            <Button fx:id="btnCriarConta" mnemonicParsing="false" onAction="#criarConta" text="Criar Conta" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
